<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="com.example.cocolor.activity.UpdateActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/back_to_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:src="@mipmap/back"
        app:backgroundTint="@android:color/background_light"
        tools:visibility="visible"
        android:focusable="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/edit_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="end"
        android:clickable="true"
        android:src="@mipmap/edit"
        app:backgroundTint="@android:color/background_light"
        tools:visibility="visible"
        android:focusable="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/download_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        android:src="@mipmap/download"
        app:backgroundTint="#bbb"
        tools:visibility="visible"
        android:focusable="true" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/colloection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"
        android:clickable="true"
        android:src="@mipmap/collection"
        app:backgroundTint="@android:color/background_light"
        tools:visibility="visible"
        android:focusable="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view">

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/card_image"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:scaleType="centerCrop"/>

        <com.qmuiteam.qmui.layout.QMUILinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            app:qmui_childHorizontalSpacing="16dp">


            <View
                android:layout_width="0dp"
                android:layout_height="40dp"/>

            <View
                android:id="@+id/color_view_2"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:elevation="5dp"
                android:background="@drawable/bg_round"/>

            <View
                android:id="@+id/color_view_1"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:elevation="5dp"
                android:background="@drawable/bg_round"/>

            <View
                android:id="@+id/color_view_3"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:elevation="5dp"
                android:background="@drawable/bg_round"/>

            <View
                android:id="@+id/color_view_6"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:elevation="5dp"
                android:background="@drawable/bg_round"/>

            <View
                android:id="@+id/color_view_4"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:elevation="5dp"
                android:background="@drawable/bg_round"/>

            <View
                android:id="@+id/color_view_5"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:elevation="5dp"
                android:background="@drawable/bg_round"/>

        </com.qmuiteam.qmui.layout.QMUILinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:paddingRight="40dp">

                <EditText
                    android:id="@+id/title_edit_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="Title"
                    android:textColorHint="#888"
                    android:gravity="center"
                    android:padding="16dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#888"
                    android:maxLines="1"
                    android:enabled="false"/>

                <ImageView
                    android:id="@+id/category_edit_view"
                    android:layout_margin="4dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/scene"
                    android:clickable="false"/>

                <EditText
                    android:id="@+id/description_edit_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Write about your feelings..."
                    android:textColorHint="#999"
                    android:gravity="start|top"
                    android:padding="10dp"
                    android:textSize="14sp"
                    android:minHeight="120dp"
                    android:enabled="false" />


            </LinearLayout>


        </com.qmuiteam.qmui.layout.QMUILinearLayout>


    </ScrollView>





</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>